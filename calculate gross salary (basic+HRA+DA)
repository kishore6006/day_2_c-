#include <stdio.h>

int main() {
    float basic, hra, da, grossSalary;

    printf("Enter the basic salary: ");
    scanf("%f", &basic);

    hra = 0.20 * basic;

    da = 0.10 * basic;

    grossSalary = basic + hra + da;

    printf("Basic Salary: %.2f\n", basic);
    printf("HRA: %.2f\n", hra);
    printf("DA: %.2f\n", da);
    printf("Gross Salary: %.2f\n", grossSalary);

    return 0;
}
